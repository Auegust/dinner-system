public class TestDemo {
	private static ApplicationContext ctx ;
	
	static{
		ctx = new ClassPathXmlApplicationContext("applicationContext.xml");
	}
	
	/**
	 * spring≈‡—µdemo
	 */
	@Test
    public void testTeacher() {
        Teacher teacher = (Teacher) ctx.getBean("teacher");
        List<String> interestsList=teacher.readInterestsList();
        String name=teacher.readName();
        System.out.println("–’√˚£∫"+name);
		for(int i=0;i<interestsList.size();i++){
			 System.out.println("–À»§:"+interestsList.get(i));
		}
		assertEquals("’≈»˝",name);
	}
	
	/**
	 * hibernate≈‡—µdemo
	 */
	@Test
    public void testPerson() {
		PersonManager personManager = (PersonManager) ctx.getBean("personManager");
		String id=personManager.insert();
        System.out.println(id);
        Assert.assertNotNull(id);
	}

